<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>
<hr>
<%= form_tag(movies_path, method: "get") do %>
  <%= label_tag(:title, "Search Title:") %>
  <%= text_field_tag(:title) %>

  <%= label_tag(:director, "Search Director:") %>
  <%= text_field_tag(:director) %>

 <%= select_tag(:runtime, options_for_select(
      ['','Under 90 minutes','Between 90 and 120 minutes', 'Over 120 minutes'])) %>

  <%= submit_tag("Search") %>
<% end %>
<hr>
<% @movies.each do |movie| %>
  <%= link_to image_tag(movie.image_url(:thumb).to_s), movie_path(movie) %>
  <h2><%= link_to movie.title, movie_path(movie) %> | <%= movie.review_average %>/10</h2>
  <h3><%= formatted_date(movie.release_date) %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>